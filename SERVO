#include <ESP32Servo.h>
#define SERVO_PIN 13
#define RLED_PIN 12

Servo myServo;

void setup() {
	// put your setup code here, to run once:
    Serial.begin(9600);
    pinMode(RLED_PIN, LOW);
  	myServo.attach(SERVO_PIN);
  	myServo.write(0);
}

void loop() {
  myServo.write(90);
  Serial.println("Servo angle: 90 deg");
  delay(2000);
  myServo.write(0);
  Serial.println("Servo angle: 0 deg");
  delay(2000);
  myServo.write(180);
  Serial.println("Servo angle: 180 deg");
  delay(2000);
  myServo.write(0);  
  Serial.println("Servo angle: 0 deg");
  delay(2000);
}
