#include <ESP32Servo.h>
#define SERVO_PIN 13

Servo myServo;

void setup() {
	// put your setup code here, to run once:
  	myServo.attach(SERVO_PIN);
  	myServo.write(0);
}

void loop() {
  myServo.write(90);
  delay(2000);
  myServo.write(0);
  delay(2000);
  myServo.write(180);
  delay(2000);
  myServo.write(0);  
  delay(2000);
}
